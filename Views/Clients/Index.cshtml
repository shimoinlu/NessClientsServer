@model IEnumerable<NessClientsServer.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

@if(ViewData["allowEdit"] != null)
{
<h1>Edit Clients</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
}
@if(ViewData["SearchScreen"] == null && ViewData["allowEdit"] == null)
{
<h1>All Clients</h1>

}
@if(ViewData["SearchScreen"] != null)
{
<h1>Search Clients</h1>

<form asp-controller="Clients" asp-action="Search">
    <p>
        First Name: <input type="text" name="FirstName" />
        Sure Name: <input type="text" name="SureName" />
        Id: <input type="text" name="PersonalId" />
        <input type="submit" value="Filter" />
    </p>
</form>
}
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Sure Name
            </th>
            <th>
                Id
            </th>
            <th>
                Ip Address
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Country
            </th>
            <th>
                City
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhonoNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
                @if(ViewData["allowEdit"] != null)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
